  script(src='https://use.fontawesome.com/releases/v5.13.0/js/all.js' crossorigin='anonymous')
  // Style CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css')
  link(rel='stylesheet' href='css/style.css')
  link(rel='icon' type='image/png' href='../img/logo_edited1.png')
// navigation
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  a.navbar-brand(href='../index.pug')
    img.logo.my-2(src='../img/logo_edited1.png' alt='logo')
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarNav.collapse.navbar-collapse
    ul.navbar-nav
      li.nav-item
        a.nav-link(href='recipe.pug') Recipes
      li.nav-item
        a.nav-link(href='user.pug') Users
      li.nav-item
        a.nav-link(href='order.pug') Orders
      li.nav-item
        a.nav-link.active(href='categories.pug') Categories
      li.nav-item
        a.nav-link(href='service.pug') Services
      li.nav-item
        a.nav-link(href='delivery.pug') Delivery
      li.nav-item
        a.nav-link(href='#') Logout
// end of navigation
header.masthead
  #admin_nav.container.d-flex.h-100.align-items-center.justify-content-center
    .row.justify-content-center.login
      h1.text-black.mx-auto.mt-0.mb-3.text-center.custom_lineheight Login
      .col-md-12
        .card.lo_form
          .card-header Login
          .card-body
            form(method='POST' action='')
              input(type='hidden' name='_token' value='')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='email') E-Mail Address
                .col-md-6
                  input#email.form-control(type='email' name='email' value='' required='' autocomplete='email' autofocus='')
              .form-group.row
                label.col-md-4.col-form-label.text-md-right(for='password') Password
                .col-md-6
                  input#password.form-control(type='password' name='password' required='' autocomplete='current-password')
              .form-group.row
                .col-md-6.offset-md-4
                  .form-check
                    input#remember.form-check-input(type='checkbox' name='remember')
                    label.form-check-label(for='remember') Remember Me
              .form-group.row.mb-0.text-center
                .col-md-12
                  button.btn.btn-success(type='submit') Login
                  a.btn.btn-info(href='#')
                    | Forgot Password
