  // Title
  title Eritrean Traditional Food
  // Favicon
  link(rel='icon' href='../assets/img/favicon-32x32.png')
  // google font
  link(href='https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap' rel='stylesheet')
